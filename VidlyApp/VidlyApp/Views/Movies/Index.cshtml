@model IEnumerable<VidlyApp.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@if (Model.Count() == 0)
{
    <p>We don't have any movies yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
        @foreach (var m in Model)
        {
            <tr>
                <td>@Html.ActionLink(m.Name,"Details","Movies", new { Id = m.Id },null)</td>
                <td>@m.Genre.Name</td>
            </tr>
        }
    </table>
}

